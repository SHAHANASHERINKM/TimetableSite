<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Details Table</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
      margin: 20px 0;
      font-size: 18px;
      text-align: left;
    }
    th, td {
      border: 1px solid #ddd;
      padding: 12px;
    }
    th {
      background-color: #f4f4f4;
    }
    tr:nth-child(even) {
      background-color: #f9f9f9;
    }
    tr:hover {
      background-color: #f1f1f1;
    }
    .action-buttons {
      display: flex;
      gap: 10px;
    }
    button {
      padding: 5px 10px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    .edit-btn {
      background-color: #4CAF50;
      color: white;
    }
    .edit-btn a{
      text-decoration: none;
      color: #fff;
    }
    .delete-btn {
      background-color: #f44336;
      color: white;
    }
    .delete-btn a{
      text-decoration: none;
      color: #fff;
    }
  </style>
</head>
<body>

  <h1>Student Details</h1>
  
  <table>
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Course</th>
        <th>Semester</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <!-- Example Row -->
      {{#each data}}
      <tr>
        <td>{{increment @index}}</td>
        <td>{{name}}</td>
        <td>{{email}}</td>
        <td>+91 {{phone}}</td>
        <td>{{course}}</td>
        <td>{{semester}}</td>
        <td>
          <div class="action-buttons">
            <button class="edit-btn"><a href="/edit-student-details/{{this._id}}">Edit</a></button>
            <button class="delete-btn"><a href="/delete-student/{{this._id}}" onclick="return confirm('Are you sure to delete {{this.name}}?')">Delete</a></button>
          </div>
        </td>
      </tr>
      {{/each}}
      <!-- Add more rows dynamically -->
    </tbody>
  </table>

</body>
</html>

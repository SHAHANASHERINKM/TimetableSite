        h1 {
            text-align: center;
            margin-top: 20px;
            color: #343a40;
        }

        .selection-container {
            width: 90%;
            margin: 20px auto;
            text-align: center;
        }

        .selection-container select {
            padding: 8px;
            font-size: 16px;
            margin: 10px;
        }

        .table-container {
            width: 90%;
            margin: 20px auto;
            overflow-x: auto;
            background-color: #fff;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            min-width: 600px;
        }

        th,
        td {
            padding: 12px;
            text-align: center;
            border: 1px solid #dee2e6;
        }

        th {
            background-color: #062e58;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #e9ecef;
        }

        .btn {
            padding: 6px 12px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
        }
        .view-time-table{

        }

        .btn:hover {
            background-color: #218838;
        }

        @media (max-width: 768px) {
            th,
            td {
                font-size: 14px;
                padding: 8px;
            }

            .btn {
                padding: 4px 8px;
                font-size: 12px;
            }
        }
    </style>
</head>

<body>
    <h1>{{course}} {{semester}} Timetable</h1>
    <form action="/displayTimeTable" method="post">
    <div class="selection-container">
        <label for="course">Select Course:</label>
        <select name="course" id="course">
            <option value="">--Select Course--</option>
            <option   value="MCA">MCA</option>
            <option value="MSC">MSC</option>
        </select>
        <label for="semester">Select Semester:</label>
        <select name="semester" id="semester">
            <option value="">--Select Semester--</option>
            <option value="S1">Semester 1</option>
            <option value="S2">Semester 2</option>
        </select>
         <button type="submit" class="view-time-table"><a>view Time Table</a></button>
    </div>
   
    </form>

